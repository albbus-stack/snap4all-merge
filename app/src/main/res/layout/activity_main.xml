<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:clipToPadding="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="#006A1500"
                android:fitsSystemWindows="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_horizontal"
                    android:text="Snap4All"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#6A1500"
                    android:textSize="37sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="60dp"
                android:background="#6A1500"
                android:fitsSystemWindows="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_horizontal"
                    android:text="A tool that configures a node red installation with the Snap4City suite."
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_node_red"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="#6A1500"
                    android:drawableTop="@mipmap/nodered"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="IOT APP EDITOR"
                    android:textColor="#ffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_dashboard"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#6A1500"
                    android:drawableTop="@mipmap/nodered_dashboard"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="DASHBOARD"
                    android:textColor="#ffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_console"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="#6A1500"
                    android:drawableTop="@mipmap/termux"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="CONSOLE"
                    android:textColor="#ffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_info"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#6A1500"
                    android:backgroundTint="@null"
                    android:backgroundTintMode="add"
                    android:drawableTop="@mipmap/info"
                    android:drawablePadding="5dp"
                    android:drawableTint="#ffff"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text="INFO"
                    android:textColor="#ffff"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>